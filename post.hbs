{{!< default}}
<main class="main_specter" role="main">
{{#post}}
<article role="article" itemscope itemtype="http://schema.org/Article">
<header class="post-image-cover" {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
{{navigation}}
</header>
<div class="container">
    <div class="post-content row" itemprop="articleBody">
        <div class="col-lg-8 col-lg-offset-2"
            <header class="post-header">
                <h1 class="post-title">{{title}}</h1>
                <section class="post-meta">
                    <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                </section>
            </header>
    <hr>
    {{content}}
    </div>
    <div class="col-lg-8 col-lg-offset-2">
        {{#if tags}}
            <div class="post-meta">
                Tags: {{tags separator=" | "}}
            </div>
        {{/if}}
    </div>
    </div>
    <div class="bio-share row">
        <div class="col-lg-8 col-lg-offset-2">
        <hr>
            <div class="row">
                {{#if author}}
                    <div class="col-lg-3">
                        <footer>
                        <address itemscope itemtype="http://schema.org/Person">
                        {{#if author.image}}
                        <div class="author-image"><img class="img-circle" src="{{author.image}}" itemprop="image" /></div>
                        {{/if}}
                    </div>
                    <div class="col-lg-6">
                        <h4><span itemprop="author">{{author.name}}</span></h4>
                        {{#if author.website}}
                        <div><a href="{{author.website}}" itemprop="url">{{author.website}}</a></div>
                        {{/if}}
                        </address>
                        <div>
                            <p>{{author.bio}}</p>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div>
                            <h4>Share this post: &nbsp;</h4>
                            <nav>
                                <a class="share-smooth icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="hidethis_smooth"><i class="fa fa-twitter-square"></i></span></a>
                                <a class="share-smooth icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="hidethis_smooth"><i class="fa fa-facebook-square"></i></span></a>
                                <a class="share-smooth icon-gplus" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="hidethis_smooth"><i class="fa fa-google-plus-square"></i></span></a>
                            </nav>
                        </div>
                    </div>
                    </footer>
                {{/if}}
            </div>
        <div>
    </div>
    </div>
</article>
<div class="row">
    <div id="disqus_thread" class="col-lg-8 col-lg-offset-2"></div>  
        <script type="text/javascript">
            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
            var disqus_shortname = 'jalenscriptcom'; // required: replace example with your forum shortname
            var disqus_identifier = '{{id}}';

            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
        <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>


            </div><!-- #content .site-content -->
        </div><!-- #primary .content-area -->
    </div>
</div>
{{/post}}
{{#if pagination}}
<div>
{{{pagination}}}
</div>
{{/if}}
</main>
{{> footer}}